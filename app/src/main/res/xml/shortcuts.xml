<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="history"
        android:enabled="true"
        android:shortcutShortLabel="@string/calls"
        android:icon="@drawable/footer_history">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="org.linphone"
            android:targetClass="org.linphone.history.HistoryActivity" />
    </shortcut>
    <shortcut
        android:shortcutId="chat"
        android:enabled="true"
        android:shortcutShortLabel="@string/pref_chat_title"
        android:icon="@drawable/footer_chat">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="org.linphone"
            android:targetClass="org.linphone.chat.ChatActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>
