<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <import type="android.view.View"/>
        <import type="org.linphone.core.ConsolidatedPresence"/>
        <variable
            name="menuClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="presenceClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="refreshClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="voicemailClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="org.linphone.activities.main.viewmodels.StatusViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom"
        android:background="?attr/navbarColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_button"
                android:onClick="@{menuClickListener}"
                android:contentDescription="@string/content_description_toggle_side_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@drawable/icon_menu" />

            <ImageView
                android:id="@+id/voicemail_icon"
                android:onClick="@{voicemailClickListener}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description_voice_mail"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/voice_mail_count"
                android:gravity="center_vertical"
                android:src="@drawable/voicemail"
                android:visibility="gone" />

            <TextView
                android:id="@+id/voice_mail_count"
                android:onClick="@{voicemailClickListener}"
                android:text="@{viewModel.voiceMailCount.toString()}"
                android:visibility="gone"
                android:textColor="?attr/secondaryTextColor"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="10dp" />

            <ImageView
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/logo"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/header_logo_dark"
                android:layout_centerInParent="true">
            </ImageView>

            <RelativeLayout
                android:id="@+id/relAvatarLayout"
                android:visibility="@{viewModel.userImageUrl == null ? View.GONE : View.VISIBLE, default=visible}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                >
                <ImageView
                    android:id="@+id/avatar"
                    coilRounded="@{viewModel.userImageUrl}"
                    android:onClick="@{presenceClickListener}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/generated_avatar_bg"
                    android:src="@drawable/icon_single_contact_avatar"
                    tools:ignore="ContentDescription"
                    />

                <ImageView
                    android:id="@+id/avatar_border"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/avatar_border"
                    android:visibility="@{viewModel.userImageUrl == null ? View.GONE : View.VISIBLE, default=visible}"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignBottom="@id/avatar"
                    android:layout_alignEnd="@id/avatar"
                    android:layout_marginEnd="-3dp"
                    android:layout_marginBottom="-3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/led_background"
                    app:presenceIcon="@{viewModel.dimensionsPresenceStatus}"
                    android:padding="1dp"
                    tools:ignore="ContentDescription" />

                <!--            android:visibility="@{!viewModel.defaultAccountFound || viewModel.presenceStatus == ConsolidatedPresence.Offline ? View.GONE : View.VISIBLE, default=gone}"-->


            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</layout>