<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="keyListener"
            type="org.linphone.activities.main.dialer.NumpadDigitListener" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/numpad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="?attr/backgroundColor"
        android:weightSum="1"
        app:alignContent="flex_end"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="space_evenly">

        <View
            android:layout_width="0dp"
            android:layout_height="75dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="@string/content_description_numpad_1"

            android:onClick="@{() -> keyListener.handleClick('1')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('1')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="2"
            android:onClick="@{() -> keyListener.handleClick('2')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('2')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="3"
            android:onClick="@{() -> keyListener.handleClick('3')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('3')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEF" />
        </RelativeLayout>

        <View android:layout_width="0dp" android:layout_height="0dp" />

        <View android:layout_width="0dp" android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="4"
            android:onClick="@{() -> keyListener.handleClick('4')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('4')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GHI" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="5"
            android:onClick="@{() -> keyListener.handleClick('5')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('5')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JKL" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="6"
            android:onClick="@{() -> keyListener.handleClick('6')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('6')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MNO" />
        </RelativeLayout>

        <View android:layout_width="0dp" android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="7"
            android:onClick="@{() -> keyListener.handleClick('7')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('7')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PQRS" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="8"
            android:onClick="@{() -> keyListener.handleClick('8')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('8')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUV" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="9"
            android:onClick="@{() -> keyListener.handleClick('9')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('9')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WXYZ" />
        </RelativeLayout>

        <View android:layout_width="0dp" android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="*"
            android:onClick="@{() -> keyListener.handleClick('*')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('*')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:text="*" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="0"
            android:onClick="@{() -> keyListener.handleClick('0')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('+')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                style="@style/numpad_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="#"
            android:onClick="@{() -> keyListener.handleClick('#')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('#')}">

            <TextView
                style="@style/numpad_button_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:text="#" />
        </RelativeLayout>

        <View android:layout_width="0dp" android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="75dp"
            app:layout_wrapBefore="true" />

    </com.google.android.flexbox.FlexboxLayout>

</layout>