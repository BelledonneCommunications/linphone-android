<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="keyListener"
            type="org.linphone.activities.main.dialer.NumpadDigitListener" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/numpad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="?attr/backgroundColor"
        android:weightSum="1"
        app:alignContent="space_around"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="space_evenly">

        <View
            android:layout_width="0dp"
            android:layout_height="75dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="@string/content_description_numpad_1"

            android:onClick="@{() -> keyListener.handleClick('1')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('1')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="16dp"
                android:text=" "></TextView>
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="2"
            android:onClick="@{() -> keyListener.handleClick('2')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('2')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:text="ABC"
                android:textColor="@color/grey_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="3"
            android:onClick="@{() -> keyListener.handleClick('3')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('3')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:text="DEF"
                android:textColor="@color/grey_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="4"
            android:onClick="@{() -> keyListener.handleClick('4')}"

            android:onLongClick="@{() -> keyListener.handleLongClick('4')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="16dp"
                android:text="GHI"
                android:textColor="@color/grey_color"
                android:textSize="13sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="5"
            android:onClick="@{() -> keyListener.handleClick('5')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('5')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:text="JKL"
                android:textColor="@color/grey_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="6"
            android:onClick="@{() -> keyListener.handleClick('6')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('6')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:text="MNO"
                android:textColor="@color/grey_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="7"
            android:onClick="@{() -> keyListener.handleClick('7')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('7')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="16dp"
                android:text="PQRS"
                android:textColor="@color/grey_color"
                android:textSize="13sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="8"
            android:onClick="@{() -> keyListener.handleClick('8')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('8')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:text="TUV"
                android:textColor="@color/grey_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="9"
            android:onClick="@{() -> keyListener.handleClick('9')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('9')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:text="WXYZ"
                android:textColor="@color/grey_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_wrapBefore="true" />

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="*"
            android:onClick="@{() -> keyListener.handleClick('*')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('*')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="*" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="0"
            android:onClick="@{() -> keyListener.handleClick('0')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('+')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:text="+"
                android:textColor="@color/grey_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/numpad_button"
            android:contentDescription="#"
            android:onClick="@{() -> keyListener.handleClick('#')}"
            android:onLongClick="@{() -> keyListener.handleLongClick('#')}"
            android:theme="@style/numpad_button_digit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6sp"
                android:text="#" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="75dp"
            app:layout_wrapBefore="true" />

    </com.google.android.flexbox.FlexboxLayout>

</layout>