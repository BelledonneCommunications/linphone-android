<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="conferenceViewModel"
            type="org.linphone.activities.voip.viewmodels.ConferenceViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:entries="@{conferenceViewModel.conferenceParticipants}"
            app:layout="@{@layout/voip_conference_participant_remote}"
            app:flexDirection="@{conferenceViewModel.flexboxLayoutDirection}"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch"
            app:justifyContent="space_evenly"
            app:showDivider="middle"
            app:dividerDrawable="@drawable/shape_conference_divider"/>

    </LinearLayout>

</layout>