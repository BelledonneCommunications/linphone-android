<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="position"
            type="Integer"/>

        <variable
            name="viewModel"
            type="org.linphone.activities.main.history.viewmodels.RecordingInfoViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        tools:background="@color/white_color">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{ viewModel.isPlaying ? View.VISIBLE : View.GONE, default=gone }"
            android:background="@color/light_grey_color">
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52sp"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:onClick="@{clickListener}">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{viewModel.label, default=`Jebediah Springfield âž” Lisa Simpson`}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{viewModel.formattedDuration, default=`32 seconds`}"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
