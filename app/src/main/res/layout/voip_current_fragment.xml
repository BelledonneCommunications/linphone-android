<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.google.android.flexbox.FlexDirection" />
        <variable
            name="controlsViewModel"
            type="org.linphone.activities.voip.viewmodels.ControlsViewModel" />
        <variable
            name="callsViewModel"
            type="org.linphone.activities.voip.viewmodels.CallsViewModel" />
        <variable
            name="conferenceViewModel"
            type="org.linphone.activities.voip.viewmodels.ConferenceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/voip_gray_blue_color">

        <com.google.android.flexbox.FlexboxLayout
            android:visibility="@{conferenceViewModel.isInConference ? View.VISIBLE : View.GONE, default=gone}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/primary_buttons"
            app:entries="@{conferenceViewModel.conferenceParticipantDevices}"
            app:layout="@{@layout/voip_conference_participant_remote}"
            app:flexDirection="@{conferenceViewModel.conferenceParticipantDevices.size() > 2 ? FlexDirection.ROW : FlexDirection.COLUMN, default=column}"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch"
            app:justifyContent="space_evenly" />

        <include
            android:id="@+id/remote_layout"
            layout="@layout/voip_call_remote"
            android:visibility="@{conferenceViewModel.isInConference ? View.GONE : View.VISIBLE, default=visible}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/primary_buttons"
            app:viewModel="@{callsViewModel.currentCallViewModel}"
            app:controlsViewModel="@{controlsViewModel}"/>

        <include
            layout="@layout/voip_local_preview"
            android:visibility="@{controlsViewModel.isVideoEnabled ? View.VISIBLE : View.GONE, default=gone}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            app:layout_constraintBottom_toTopOf="@id/primary_buttons"
            app:layout_constraintRight_toRightOf="parent"
            app:controlsViewModel="@{controlsViewModel}" />

        <include
            android:id="@+id/primary_buttons"
            android:visibility="@{controlsViewModel.fullScreenMode ? View.GONE : View.VISIBLE}"
            layout="@layout/voip_buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voip_buttons_fragment_size"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:viewModel="@{controlsViewModel}" />

        <include
            layout="@layout/voip_extra_buttons"
            android:visibility="@{controlsViewModel.showExtras ? View.VISIBLE : View.GONE, default=gone}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:viewModel="@{controlsViewModel}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>