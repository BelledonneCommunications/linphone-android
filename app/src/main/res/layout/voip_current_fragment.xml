<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.google.android.flexbox.FlexDirection" />
        <variable
            name="controlsViewModel"
            type="org.linphone.activities.voip.viewmodels.ControlsViewModel" />
        <variable
            name="callsViewModel"
            type="org.linphone.activities.voip.viewmodels.CallsViewModel" />
        <variable
            name="conferenceViewModel"
            type="org.linphone.activities.voip.viewmodels.ConferenceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/voip_gray_blue_color">

        <include layout="@layout/voip_conference"
            android:visibility="@{conferenceViewModel.isInConference ? View.VISIBLE : View.GONE, default=gone}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:conferenceViewModel="@{conferenceViewModel}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/primary_buttons"/>

        <include
            android:id="@+id/remote_layout"
            layout="@layout/voip_call_remote"
            android:visibility="@{conferenceViewModel.isInConference ? View.GONE : View.VISIBLE, default=visible}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/primary_buttons"
            app:viewModel="@{callsViewModel.currentCallData}"
            app:controlsViewModel="@{controlsViewModel}"/>

        <include
            layout="@layout/voip_local_preview"
            android:visibility="@{controlsViewModel.isVideoEnabled ? View.VISIBLE : View.GONE, default=gone}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            app:layout_constraintBottom_toTopOf="@id/primary_buttons"
            app:layout_constraintRight_toRightOf="parent"
            app:controlsViewModel="@{controlsViewModel}" />

        <include
            android:id="@+id/primary_buttons"
            android:visibility="@{controlsViewModel.fullScreenMode ? View.GONE : View.VISIBLE}"
            layout="@layout/voip_buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voip_buttons_fragment_size"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:viewModel="@{controlsViewModel}" />

        <LinearLayout
            android:onClick="@{() -> controlsViewModel.hideExtraButtons()}"
            android:visibility="@{controlsViewModel.showExtras ? View.VISIBLE : View.GONE, default=gone}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99444444" />

        <include
            layout="@layout/voip_extra_buttons"
            android:translationY="@{controlsViewModel.extraButtonsMenuTranslateY, default=@dimen/voip_call_extra_buttons_translate_y}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voip_call_extra_buttons_height"
            android:layout_margin="10dp"
            app:viewModel="@{controlsViewModel}"
            app:layout_constraintBottom_toBottomOf="parent" />

        <include layout="@layout/voip_paused_conference"
            android:visibility="@{conferenceViewModel.isInConference &amp;&amp; conferenceViewModel.isConferencePaused ? View.VISIBLE : View.GONE, default=gone}"
            app:conferenceViewModel="@{conferenceViewModel}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>